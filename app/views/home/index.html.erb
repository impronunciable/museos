	
	<section id="hero" style="background-image:url(<%= asset_path "examples/malba.jpg" %>);">
		<div id="heroHolder">
			<div class="wrap">
				<div id="heroInfo">
					<h2 class="intro">Museos de Buenos Aires</h2>
				</div>
			</div>
			<div id="heroSearch" class="wrap">
				<form action="" method="get">
					<p>
						<label for="s" class="accesible">Buscar</label>
						<input type="text" name="s" id="s" placeholder="Buscá un museo&hellip;">
						<button type="submit" class="btn btn-big">Buscar</button>
					</p>
				</form>
			</div>
		</div>
	</section>

	<section class="museumList" id="featuredList">
		<div class="wrap">
			<h3 class="title">Museos más populares</h3>
			<ul>
				<% @museos.each do |museo| %>
				<li class="museum">
					<p><%= museo.id %></p>
					<div class="mPic">
						<%= link_to(museo) do %>
							<%= photo_tag museo, :thumb %>
							<span></span>
							<div class="rating rating-4">
								<ol>
									<li class="star star-1"></li>
									<li class="star star-2"></li>
									<li class="star star-3"></li>
									<li class="star star-4"></li>
									<li class="star star-5"></li>
								</ol>
							</div>
						<% end %>
					</div>
					<div class="mInfo">
						<h3><%= link_to museo.nombre, museo %></h3>
						<p><em><%= museo.direccion %></em></p>
						<% if museo.id.even? %>
						<span class="badge open">Abierto</span>
						<% else %>
						<span class="badge closed">Cerrado</span>
						<% end %>
					</div>
				</li>
				<% end %>
			</ul>
			<h3 class="title">Todos los museos</h3>
			<ul>
			</ul>
			<p id="loadMore"><a href="#" class="btn">Mostrar más museos</a></p>
		</div>
	</section>